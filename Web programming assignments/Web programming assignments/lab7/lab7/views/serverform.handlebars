<div class="row">
    <div class="col-sm-12">
        <form id="serverform" method="post">
                <div class="form-group">
                <label>First Text</label>
                <textarea class="form-control" rows="5" id="text1" name="text1" placeholder="First Text"> {{firstText}} </textarea>
                </div>
                <div class="form-group">
                <label>Second Insert Text</label>
                <input type="text" class="form-control" id="text2" name="text2" placeholder="Second insert Text" value="{{secondText}}">
                </div>
                <div class="form-group">
                 <label for="number1">First Number</label>
                 <input type="number" class="form-control" id="number1" name="number1" placeholder="First Number" value="{{firstNumber}}">
                </div>
                <div class="form-group">
                 <label for="number2">Second Number</label>
                 <input type="number" class="form-control" id="number2" name="number2" placeholder="Second Number" value="{{secondNumber}}">
                 </div>
                 <!--<div class="form-group-hidden" id="error-container">
                     <div class="alert alert-danger text-goes-here">
                     </div>
                 </div>-->
                 {{#if error}}
                 <div class="form-group">
                     <div class="alert alert-danger">
                         {{error}}
                     </div>
                 </div>
                 {{/if}}           
                 <div class="form-group">
                     <button type="submit" class="btn btn-default">Perform Operation </button>
                 </div>
                 {{#if result}}                 
                 <div class="form-group">
                     <div class="alert alert-success">
                         The result is:{{result}}
                     </div>
                 </div>
                 {{/if}}
        </form>
    </div>
</div> 

